<mvc:View
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		width="100%">

	<l:VerticalLayout>
		<f:SimpleForm
			editable="false"
			layout="ResponsiveGridLayout">
			<f:content>
				<core:Title text="{Name}" />
			</f:content>
		</f:SimpleForm>
    </l:VerticalLayout>

</mvc:View>