<mvc:View
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		width="100%">

	<l:VerticalLayout>
		<f:SimpleForm
			editable="false"
			layout="ResponsiveGridLayout">
			<f:content>
				<core:Title text="{Name}" />
				<Label text="Type" />
    			<Text 
			        text="{Type}" />
    			<Label text="Key" />
    			<Text text="{Key}" />
    			<Label text="Source" />
    			<Text text="{Source}" />
    			<Label text="Description" />
    			<Text text="{Description}" />
			</f:content>
		</f:SimpleForm>
    </l:VerticalLayout>

</mvc:View>